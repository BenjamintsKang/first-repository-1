import 'package:flutter/material.dart';
import 'package:dio/dio.dart';
import 'package:path_provider/path_provider.dart';
import 'dart:io';
import 'package:gallery_saver/gallery_saver.dart';

class ImageDownload extends StatefulWidget {
  @override
  State<StatefulWidget> createState() {
    return _ImageDownloadState();
  }
}

class _ImageDownloadState extends State<ImageDownload> {
  final imgUrl = 'https://mblogthumb-phinf.pstatic.net/MjAyMTA0MDVfMzAg/MDAxNjE3NTc4NjgyNjU3.bhvZBL5CXVFNNw8gmVzBY9xwu72UVKfzJzewFF-En5og.c7BY_VSEgow9nQyilO94FqTh0ImWJ72q1K-CgHR-6dkg.JPEG.choilolly/CalliLang20210405082406.jpeg?type=w800';
  bool downloading = false;
  var progressingString = "";
  String filePath = "";

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text('오늘의 명언')),
      body: Center(
        child: downloading
            ? Container(
          height: 120.0,
          width: 200.0,
          child: Card(
            color: Colors.black,
            child: Column(
              mainAxisAlignment: MainAxisAlignment.center,
              children: <Widget>[
                CircularProgressIndicator(),
                SizedBox(height: 20),
                Text(
                  'Downloading File: $progressingString',
                  style: TextStyle(color: Colors.white),
                ),
              ],
            ),
          ),
        )
            : filePath.isNotEmpty
            ? Image.file(File(filePath))
            : Text('오늘 나에게 어울리는 명언은?'),
      ),
      floatingActionButton: Row(
        mainAxisAlignment: MainAxisAlignment.end,
        children: <Widget>[
          FloatingActionButton(
            onPressed: () {
              downloadFile();
            },
            child: Icon(Icons.file_download),
            tooltip: 'Download Image',
          ),
          SizedBox(width: 16),
          FloatingActionButton(
            onPressed: () {
              if (filePath.isNotEmpty) {
                saveToGallery();
              }
            },
            child: Icon(Icons.save),
            tooltip: 'Save to Gallery',
          ),
        ],
      ),
    );
  }

  Future<void> downloadFile() async {
    Dio dio = Dio();
    setState(() {
      downloading = true;
      progressingString = '0%';
    });

    try {
      var dir = await getApplicationDocumentsDirectory();
      await dio.download(imgUrl, '${dir.path}/myimage.jpg',
          onReceiveProgress: (received, total) {
            setState(() {
              progressingString = ((received / total) * 100).toStringAsFixed(0) + '%';
            });
          }).then((Response response) {
        setState(() {
          filePath = '${dir.path}/myimage.jpg';
          downloading = false;
          progressingString = 'Completed';
        });
      });
    } catch (e) {
      print(e);
      setState(() {
        downloading = false;
      });
    }
  }

  void saveToGallery() async {
    try {
      await GallerySaver.saveImage(filePath, albumName: 'MyImages');
      showDialog(
        context: context,
        builder: (BuildContext context) {
          return AlertDialog(
            title: Text('이미지 저장'),
            content: Text('이미지가 저장되었습니다.'),
            actions: <Widget>[
              TextButton(
                child: Text('OK'),
                onPressed: () {
                  Navigator.of(context).pop();
                },
              ),
            ],
          );
        },
      );
    } catch (e) {
      print('Failed to save image: $e');
    }
  }
}
